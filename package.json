{
  "name": "superhero-battle",
  "version": "1.0.0",
  "description": "Community for DIY artists",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/CharacterSeed.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "lint": "eslint . \"**/*.js\""
  },
  "prettier": {
    "arrowParens": "avoid"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agtravis/superhero-battle.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/agtravis/superhero-battle/issues"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.20"
  },
  "dependencies": {
    "@agney/react-loading": "^0.1.2",
    "axios": "^0.21.2",
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^3.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "if-env": "^1.0.4",
    "localforage": "^1.7.3",
    "mongoose": "^5.9.7",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "react-icons": "^4.1.0",
    "react-socks": "^2.1.0",
    "request": "^2.88.2"
  }
}
